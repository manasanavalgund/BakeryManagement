<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    >


    <ImageView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/p_image"
        android:shape="rectangle"
        android:background="#441f07" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:id="@+id/p_name"
        android:text="product name"
        android:layout_toRightOf="@+id/p_image"
        android:layout_alignParentEnd="true"
        android:textColor="#ffe71e"
        android:textSize="20dp"
        android:gravity="center"
        android:background="#441f07"
        android:layout_above="@+id/p_cost"
        android:layout_alignParentTop="true" />

        <TextView
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:id="@+id/p_cost"
        android:text="product cost"
            android:textColor="#ffe42a"
        android:textSize="20dp"
        android:gravity="center"
            android:background="#441f07"
            android:layout_alignBottom="@+id/p_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/p_image"
            android:layout_toEndOf="@+id/p_image" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/p_image"
        android:layout_toStartOf="@+id/p_cost"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#d60e42" />
</RelativeLayout>