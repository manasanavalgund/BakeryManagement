<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.manasa.bakery.p2"
    android:background="#000000">

    <TextView
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:text="CAKE O&apos;CLOCK"
        android:textSize="40dp"
        android:gravity="center"
        android:textColor="#ffed1b"
        android:background="#b31436"
        android:id="@+id/tv2"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:autoText="false" />

    <ListView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lv1"
        android:layout_weight="1"
        android:layout_below="@+id/tv2"
        android:layout_alignRight="@+id/tv2"
        android:layout_alignEnd="@+id/tv2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_above="@+id/lv1"
        android:layout_alignRight="@+id/tv2"
        android:layout_alignEnd="@+id/tv2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:autoText="false"
        android:background="#441f07" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>