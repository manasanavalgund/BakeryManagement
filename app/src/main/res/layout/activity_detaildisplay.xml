<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.manasa.bakery.Detaildisplay"
    android:background="#fff698">

<ImageView
    android:layout_width="500dp"
    android:layout_height="250dp"
    android:id="@+id/iv1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Buy"
        android:clickable="true"
        android:layout_gravity="center"
        android:id="@+id/buy_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="quantity"
        android:textSize="25dp"
        android:id="@+id/tv2"
        android:layout_above="@+id/buy_button"
        android:layout_toLeftOf="@+id/buy_button"
        android:layout_toStartOf="@+id/buy_button" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/qtytext"
        android:inputType="number"
        android:layout_alignBottom="@+id/tv2"
        android:layout_toRightOf="@+id/buy_button"
        android:layout_toEndOf="@+id/buy_button" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PRODUCT  NAME :"
        android:id="@+id/pn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/iv1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PRODUCT COST :"
        android:id="@+id/pc"
        android:layout_below="@+id/pn"
        android:layout_alignRight="@+id/qtytext"
        android:layout_alignEnd="@+id/qtytext" />


</RelativeLayout>
